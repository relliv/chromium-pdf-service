# Docker Compose
COMPOSE_PROJECT_NAME=chromium_pdf

# Server Configuration
HOST=0.0.0.0
PORT=3000
NODE_ENV=development

# Logging
LOG_LEVEL=info

# Paths
SETTINGS_PATH=data/settings.json
OUTPUT_DIR=pdf-files

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Authentication (comma-separated API keys, leave empty to disable)
API_KEYS=

# CORS (comma-separated origins, leave empty to allow all)
ALLOWED_ORIGINS=

# URL Security (SSRF protection)
ALLOWED_URL_DOMAINS=
BLOCK_PRIVATE_IPS=true
